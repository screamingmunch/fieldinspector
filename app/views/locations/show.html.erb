<div id="user_nav">
    <% if current_user %>
      Currently Logged in as <%= current_user.first_name %>.
      <%= link_to "Log out", log_out_path %>
    <% else %>
      <%= link_to "Sign up", sign_up_path %> or
      <%= link_to "log in", log_in_path %>
    <% end %>
</div>
<br>
<div id="location_project">
  <h2>Project name: <%=@location.project_name%></h2>
  Address: <%=@location.address %></br>
  <% if current_user %>
    <%= link_to "edit", edit_location_path(@location)%> </br>
  <% end %>
</div>
