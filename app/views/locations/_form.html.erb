<%= form_for @location, html: {class: "location_form"} do |f| %>
  <%= f.label :project_name %>
  <%= f.text_field :project_name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :latitude %>
  <%= f.text_field :latitude %>
  <%= f.label :longitude %>
  <%= f.text_field :longitude %>
  <%= f.label(:risk_level, "CASQA risk level") %>
  <%= f.text_field :risk_level %>
  <%= f.label :contractor_company_name %>
  <%= f.text_field :contractor_name %>
  <%= f.label :contractor_address %>
  <%= f.text_field :contractor_address %>
  <%= f.label :contractor_contact_person %>
  <%= f.text_field :contractor_contact_person %>
  <%= f.label :contractor_contact_phone_number %>
  <%= f.phone_field :contractor_contact_phone %>
  <br><%= f.submit "Update" %></br>
<% end %>

