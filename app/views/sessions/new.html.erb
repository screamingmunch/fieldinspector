
<div class="splash">

  <div class="logo">
    <h1>Field Inspector</h1>
    <h3>A Mobile Clipboard</h3>
  </div>

  <div class="info">
    <%= image_tag 'constuct2.jpg' %>
  </div>
  <div class="start">
    <span class="entypo-up-open-big"></span>
  </div>

</div>

<div class="color-strip"></div>

<div class='signin'>

  <div class="logo">
    <h1>Field Inspector</h1>
  </div>

  <div class="form">
  <%= form_for(:session, url: sessions_path) do |f| %>
    <div class="input"><%= f.text_field :email, :placeholder => "Email" %></div>
    <div class="input-last"><%= f.password_field :password, :placeholder => "Password" %></div>
  </div>
  <%= f.submit "Log in", class: "btn btn-warning" %>
  <% end %>
  <%= link_to "Click here to Sign up!", sign_up_path, class: 'btn btn-secondary' %>

</div>


